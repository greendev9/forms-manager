<div>
    <img src="~/assets/images/demo-signature.png" id="img-demo" class="thumbnail border" width="450" height="150" style="border-radius: 5px;" onclick="ShowSignature()" />
    <canvas id="signature" width="450" height="150" class="border" style="border-radius: 5px; display: none;"></canvas>
    <br />
    <button id="clear-signature" style="display: none;">Clear</button>
</div>

<script src="//cdnjs.cloudflare.com/ajax/libs/signature_pad/1.5.3/signature_pad.min.js"></script>
<script type="text/javascript">
    function ShowSignature() {
        $('#img-demo').hide();
        $('#signature').show();
        $('#clear-signature').show();
    }

    jQuery(document).ready(function ($) {
        var canvas = document.getElementById("signature");
        var signaturePad = new SignaturePad(canvas);

        $('#clear-signature').on('click', function () {
            signaturePad.clear();
            $('#img-demo').show();
            $('#signature').hide();
            $('#clear-signature').hide();
        });
    });
</script>