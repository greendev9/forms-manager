@using SharedAssemblies.Content.AppCode;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1">
    <meta content="A fully featured admin theme which can be used to build CRM, CMS, etc." name="description" />
    <meta content="Coderthemes" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/assets/images/favicon.ico">

    <!-- Plugins css -->
    <link href="~/assets/libs/select2/css/select2.min.css" rel="stylesheet" type="text/css" />

    <!-- App css -->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" id="bs-default-stylesheet" />
    <link href="~/assets/css/app.min.css" rel="stylesheet" type="text/css" id="app-default-stylesheet" />
    <link href="~/assets/css/bootstrap-dark.min.css" rel="stylesheet" type="text/css" id="bs-dark-stylesheet" />
    <link href="~/assets/css/app-dark.min.css" rel="stylesheet" type="text/css" id="app-dark-stylesheet" />
    <!-- icons -->
    <link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/glbl")

    @{
        // Added the below jquery-ui.js file to get the "dialog" working (Using it to replace boring javascript "alert" function)
    }
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
</head>

<body class="loading">

    <!-- Begin page -->
    <div id="wrapper">

        @Html.Partial("~/Views/Shared/_LeftSidebar.cshtml")
    </div>
    <!-- Left Sidebar End -->
    <!-- ============================================================== -->
    <!-- Start Page Content here -->
    <!-- ============================================================== -->

    <div class="content-page">

        @Html.Partial("~/Views/Shared/_TopBar.cshtml")

        <div class="content">
            <!-- Start Content-->
            @RenderBody()
        </div> <!-- content -->
        @Html.Partial("~/Views/Shared/_Footer.cshtml")

    </div>

    <!-- ============================================================== -->
    <!-- End Page content -->
    <!-- ============================================================== -->
    <!-- END wrapper -->
    @Html.Partial("~/Views/Shared/_RideSidebar.cshtml")
    @Html.Partial("~/Views/Shared/_PleaseWaitModal.cshtml")

    <!-- Vendor js -->
    <script src="~/assets/js/vendor.min.js"></script>

    <!-- Plugins Js -->
    <script src="~/assets/libs/select2/js/select2.min.js"></script>

    <!-- KNOB JS -->
    <script src="~/assets/libs/jquery-knob/jquery.knob.min.js"></script>

    <!-- init js -->
    <script src="~/assets/js/pages/form-advanced.init.js"></script>

    <!-- App js -->
    <script src="~/assets/js/app.min.js"></script>


    <!-- Alert Box -->
    @Html.Partial("~/Views/Shared/_AlertBox.cshtml") <!-- using query string -->
    @Html.Partial("~/Views/Shared/_AlertBox1.cshtml")<!-- using temp data -->

    @RenderSection("scripts", required: false)
</body>
</html>